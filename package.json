{
  "name": "@checkmoney/soap-opera",
  "version": "1.1.2",
  "main": "dist/index.js",
  "repository": "git@github.com:checkmoney/soap-opera.git",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc",
    "prepare": "yarn build",
    "test": "yarn jest",
    "pretty": "yarn prettier --write .",
    "commit": "yarn git-cz",
    "lint:code": "yarn eslint \"./**/*.{ts,tsx}\"",
    "release": "yarn standard-version"
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@solid-soda/cache": "^0.4.1",
    "axios": "^0.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "date-fns": "^2.8.1",
    "querystring": "^0.2.0"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "latest",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "standard-version": "^7.1.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "yarn commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "yarn prettier --write"
    ]
  }
}
